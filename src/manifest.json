{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.5.0",
  "author": "mklkj",
  "homepage_url": "https://github.com/mklkj/medium-volcano",
  "default_locale": "en",

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://uonetplus-opiekun.vulcan.net.pl/*/*/Oceny*/Wszystkie*",
        "*://uonetplus-opiekun.fakelog.cf/*/*/Oceny.mvc/Wszystkie*"
      ],
      "js": [
        "bookmarklet.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "icon-48.png",
    "default_title": "__MSG_extensionName__"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ]
}
